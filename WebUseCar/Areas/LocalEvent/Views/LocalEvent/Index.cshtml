@{
    ViewBag.Title = "Profile";
}

<ion-view view-title="<b >Xe Đưa Đón</b>">
    <ion-content>
        <ion-scroll direction="y" class="theroot">
            <select id="ddlCat" ng-model="ddlCat" ng-init="ddlCat='-1'" style="width:100%;height:30px;background-color:#eaebed;margin-top:4px;margin-bottom:3px" ng-model="ddlCat" ng-change="ChooseLocalEvent(ddlCat)">
                <option value="-1">Choose Category</option>
                <option ng-repeat="option in lstCat" value="{{option.value}}">{{option.text}}</option>
            </select>
            <ul class="localevent-cat">
                <li>
                    <div><b>SHOP</b></div>
                    <span>
                        <img src="~/img/1.jpg" height="200" width="100%" ng-click="Detail()" />
                    </span>
                </li>
                <li>
                    <div><b>FOOD</b></div>
                    <img src="~/img/2.jpg" height="200" width="100%" ng-click="Detail()" />
                </li>
            </ul>
            <ul class="localevent" style="display:none">
                <li>
                    <div><b>Cafe shop Monaco</b>30 miles</div>
                    <span>
                        <img src="~/img/1.jpg" height="200" width="100%" ng-click="Detail()" />
                    </span>
                </li>
                <li>
                    <div><b>AirPort Monaco</b>30 miles</div>
                    <img src="~/img/2.jpg" height="200" width="100%" ng-click="Detail()" />
                </li>
                <li>
                    <div><b>Supermartket BigC</b>30 miles</div>
                    <img src="~/img/3.jpg" height="200" width="100%" ng-click="Detail()" />
                </li>
                <li>
                    <div><b>KFC Monaco</b>30 miles</div>
                    <img src="~/img/1.jpg" height="200" width="100%" ng-click="Detail()" />
                </li>
                <li>
                    <div><b>Cinema Monaco</b>30 miles</div>
                    <img src="~/img/2.jpg" height="200" width="100%" ng-click="Detail()" />
                </li>
                <li>
                    <div><b>Foody Monaco</b>30 miles</div>
                    <img src="~/img/3.jpg" height="200" width="100%" ng-click="Detail()" />
                </li>
            </ul>
        </ion-scroll>
    </ion-content>
</ion-view>
<style>
    .localevent-cat li,.localevent li {
        position: relative;
        color: white;
        margin-bottom:3px;
    }
    .localevent li b {
        display: block;
        margin-bottom: -3px;
        margin-top: 1px;
    }
    .localevent-cat li b {
        line-height:38px;
    }
    .localevent-cat li div,.localevent li div {
        position: absolute;
        top: 0px;
        left: 0;
        background-color: #37b997;
        height: 40px;
        width: 100%;
        padding-left: 10px;
    }

    .theroot {
    height: 100%;
    }
</style>
