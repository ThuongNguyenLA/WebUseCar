<ion-view view-title="Xe Đưa Đón">
    <ion-content cache-view="false">
        <ion-refresher on-refresh="doRefresh()">

        </ion-refresher>

        <div style="max-width:500px;margin-left:5px;position:relative">

            <table style="margin-top:0;width:100%;background-color:#fff;margin-right:15px;height:100vh">
                <tr style="border-bottom:#d9d9d9 solid 1px;height:40px">
                    @*<td width="80">
                        <span style="line-height:40px;margin-left:5px;color:gray;display:none">Back</span>
                    </td>*@
                    <td colspan="2">
                        <center><b style="color:#49ccaa;line-height:40px">REQUEST RIDER</b></center>
                    </td>
                </tr>
                <tr style="border-bottom:#d9d9d9 solid 1px;height:40px;display:none">
                    <td>
                        <div style="position:relative;left:8px">Pickup</div>
                    </td>
                    <td>
                        <input tommy-address-autocomplete disable-tap ng-model="txtPickup" ng-blur="EnableMap()" ng-focus="DisableMap()" style="padding-left:5px;margin-top:6px;height:26px;width:100%;background-color:#eaebed;border:none;margin-right:5px;" />
                    </td>
                </tr>
                <tr>
                    <td colspan="2" style="min-height:200px">
                        <div style="width:100%;height:100%;" id="map_canvas">

                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" style="min-height:200px">
                        <img id="snapshot" style="width:100%; min-height:50px" />
                    </td>
                </tr>
            </table>
            <div id="pn1" style="position:absolute;bottom:124px;background-color:#edeef0;padding-bottom:30px;width:100%;height:50px;display:none">
                @*<button ng-click="Calculate(txtPickup)" style="width:80%;margin-left:10%;margin-top:10px;background-color:#49ccaa;height:30px;border:none;color:white">Book Now</button>*@
                <button ng-click="BookRider()" style="width:80%;margin-left:10%;margin-top:10px;background-color:#49ccaa;height:30px;border:none;color:white">Book Now</button>

            </div>
            <div id="pn2" style="position:absolute;bottom:103px;background-color:white;padding-bottom:30px;width:100%;display:none">
                <table width="100%" border="1">
                    <tr>
                        <td colspan="2">
                            <center>
                                <span style="line-height:40px" >
                                    Estimate <span id="Duration"></span> minutes arrival
                                    <button ng-click="BookRider()" ng-model="dd" style="width:80%;margin-left:10%;margin-top:10px;background-color:#49ccaa;height:30px;border:none;color:white">Book Now</button>
                                </span>
                            </center>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <div style="background-color:#49ccaa">
                                <img src="/img/avatar.png" id="DriverAvatar2" height="30" width="30" style="position:relative;top:8px;left:9px" />
                                <span style="margin-left:10px;line-height:40px;color:#fff" id="DriverName2"></span>
                                <div style="float:right;margin-right:5px;margin-top:13px;color:white">
                                    <img src="~/img/icons/icon-car.png" style="margin-right:5px;position:relative;bottom:0;width:25px" />
                                    <span id="CarModel2"></span>

                                </div>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
        </div>

    </ion-content>
</ion-view>