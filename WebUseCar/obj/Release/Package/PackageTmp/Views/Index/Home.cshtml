@{
    ViewBag.Title = "Home";
}

<ion-view view-title="<b>Xe Đưa Đón</b>">
    <ion-content>
        <ion-refresher on-refresh="doRefresh()">

        </ion-refresher>
    
           
        <ion-slide-box>

            <ion-slide ng-repeat="image in images">

                <div class="container" ng-if="slideVisible($index)" class="scrollCanvas">
                    <ion-scroll class="scrollCanvas" zooming="true" min-zoom="1" direction="xy" locked="false">
                        <div class="image" style="background-image: url( {{image}} );height:100vh;">


                        </div>
                        
                    </ion-scroll>

                </div>

                <div>&nbsp;</div>

            </ion-slide>

        </ion-slide-box>


        
    </ion-content>
</ion-view>
<style>



.scrollCanvas{
  width: 100%;
  height: 100%;
  background-color: black;
}

.image{
    width:100%;
    height:100%;
  background-size: 100% 100%;
